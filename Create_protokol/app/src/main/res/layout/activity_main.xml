<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text="СОДЕРЖАНИЕ\n(план работ)"
                    android:textAllCaps="false"
                    android:textColor="@color/fon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:onClick="titlePage"
                    android:text="Титульный лист"
                    android:textColor="@color/fon" />

                <Button
                    android:id="@+id/button43"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text="Заключение"
                    android:textColor="@color/fon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text="Основные данные"
                    android:textColor="@color/fon" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text="Визуальный осмотр"
                    android:textColor="@color/fon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button19"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:onClick="insulation"
                    android:text="Изоляция"
                    android:textColor="@color/fon" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text='"фаза-нуль"'
                    android:textColor="@color/fon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text="Автоматические выключатели"
                    android:textColor="@color/fon" />

                <Button
                    android:id="@+id/button20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:text="Дифференциальные автоматы"
                    android:textColor="@color/fon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button23"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:onClick="roomElement"
                    android:text="Металлосвязь"
                    android:textColor="@color/fon" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttons"
                    android:onClick="groundingDevices"
                    android:text="Заземлители и заземл. устройства"
                    android:textColor="@color/fon" />
            </LinearLayout>

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/another_buttons"
                android:padding="10dp"
                android:text="Удаление данных"
                android:textColor="@color/fon" />
        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>